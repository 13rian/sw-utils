<?xml version="1.0"?><project name="swUtils" default="swUtilsSrc">	<!-- set global properties, baseDir is the directory where this script is -->	<property name="buildDir" value="${basedir}/build" />

	<!-- ================================= target: swUtils.jar ================================= -->
	<target name="swUtils">		<!-- create the build dir if it is not present -->		<mkdir dir="${buildDir}" />				<!-- delete the old jar-file -->		<delete>
			<fileset dir="${buildDir}" includes="swUtils.jar" />
		</delete>				<!-- create the jar-file, external libraries are not included, they need to be included in the project where			 this jar file is used -->
		<jar jarfile="${buildDir}/swUtils.jar" basedir="${basedir}/target">			<manifest>				<attribute name="Built-By" value="stefan.wenk" />			</manifest>						<!-- define the folders and files to exclude -->			<exclude name="classes/Main_SWUtils.class" />			<exclude name="classes\ch\wenkst\sw_utils\tests\**" />		</jar>	</target>		<!-- ================================= target: swUtils-src.jar ================================= -->	<target name="swUtilsSrc" depends="swUtils">				<!-- delete the old jar-file -->		<delete>			<fileset dir="${buildDir}" includes="swUtils-src.jar" />		</delete>				<!-- create the jar-file, external libraries are not included, they need to be included in the project where			 this jar file is used -->		<jar jarfile="${buildDir}/swUtils-src.jar" basedir="${basedir}/src">			<manifest>				<attribute name="Built-By" value="stefan.wenk" />			</manifest>						<!-- define the folders and files to exclude -->			<exclude name="classes/Main_SWUtils.java" />			<exclude name="classes\ch\wenkst\sw_utils\tests\**" />		</jar>	</target></project>